@model IEnumerable<_24dh110321_MyStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        img{
            height:100px;
            max-width:150px;
        }
    </style>
</head>

<h2 class="bg-success">DANH SÁCH SẢN PHẨM</h2>
<table class="table bg-info clo-md-6">

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
    </p>
    <table class="table bg-info">
        <tr>  
            <th class=" bg-success clo-md-3 ">
                Tên sản phẩm
            </th>
            <th class=" bg-success clo-md-2">
                Hình ảnh sản phẩm
            </th>
            <th class=" bg-success clo-md-2 ">
                Mô tả sản phẩm
            </th>
            <th class=" bg-success clo-md-1">
                Đơn giá sản phẩm
            </th>
            
            <th class=" bg-success clo-md-2">
                Danh mục sản phẩm
            </th>
            <th class=" bg-success clo-md-4"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td> <img src=" @Html.DisplayFor(modelItem => item.ProductImage)"</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDescription) </td>
                <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                <td>
                    @Html.ActionLink("sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }

    </table>
